@{
}


<h1>hello from category index view</h1>



<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">catgory list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Category name</th>
        <th> Display name</th>
        <th> </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList)
        {
            
            <tr>
                <td> @obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-page="/categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
            
            
        }
    </tbody>
</table>

</div>